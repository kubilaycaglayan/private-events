<h1>Show User</h1>

<h3>Events of <%= @user.name %> </h3>
<ol>
  <% @events.each do |event| %>
    <li>
      <%= event.description %>
      <%= link_to 'More Details', event_path(event.id) %>
    </li>
  <% end %>
</ol>

<h3>Event <%= @user.name %> is invited:</h3>

<ol>
  <% @user.attended_events.each do |event| %>
    <li>
      <%= event.description %>
    </li>
  <% end %>
</ol>