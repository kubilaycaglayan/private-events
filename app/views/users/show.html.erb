<h4 class="text-align-center">Events list <strong> <%= @user.name %> </strong> Created </h4>

<table class="table w-25">
    <thead class="thead-dark">
        <tr>
            <th>Description</th>
            <th>Show Event Page</th>
        </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
            <td><%= event.description %></td>
            <td><%= link_to 'Details', event_path(event.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>



<h4>Events list <%= @user.name %> is invited:</h4>

<h5>Upcoming Events</h5>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Show Event Page</th>
        </tr>
    </thead>
    <tbody>
      <% @upcoming_events.each do |event| %>
        <tr>
            <td><%= event.description %></td>
            <td><%= event.date %></td>
            <td><%= link_to 'Show', event_path(event.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<hr />

<h5>Previous Events</h5>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Show Event Page</th>
        </tr>
    </thead>
    <tbody>
      <% @prev_events.each do |event| %>
        <tr>
            <td><%= event.description %></td>
            <td><%= event.date %></td>
            <td><%= link_to 'Show', event_path(event.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
