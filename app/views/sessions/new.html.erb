
<div class="w-50 mx-auto bg-light my-5 text-center p-2 text-success border border-success rounded">
  <h1>
Sign in with your name...
</h1>
</div>

<div class="form-signin w-25 m-auto">
  <%= form_for @user, url: sessions_path, class: 'form-signin w-25 m-auto' do |f| %>
    <%= f.label :name, class: 'sr-only'  %>
    <%= f.text_field :name, placeholder: 'Name',
          required: true, class: 'form-control p-3 h3 text-center py-4' %>
    <%= f.submit 'Sign In', class: 'btn btn-lg btn-success btn-block mt-5' %>
  <% end %>
</div>

<h3 class="mt-5 mb-1 text-center text-success">
  <strong>
    Quick Access:
  </strong>
</h3>
<div class="border border-success w-50 mx-auto mt-1 mb-5">

<div class="d-flex w-75 mx-auto my-4 justify-content-around flex-wrap">

  <% @users.each do |user| %>
    <h4 class="p-1">
      <span class="badge badge-warning py-2 px-4 mx-1">

        <%= link_to user.name.upcase, sessions_path("user" => { "name" => user.name }), method: :post %>
      </span>
    </h4>
  <% end %>

</div>
</div>
